{
  "name": "sveeeth",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "description": "A viem wrapper built for Svelte",
  "version": "0.0.1-beta.2",
  "scripts": {
    "build": "tsup --dts --format esm,cjs",
    "build:watch": "tsup --dts --format esm,cjs --watch",
    "clean": "rimraf dist",
    "format:check": "prettier --check src/",
    "format": "prettier --write src/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "@wagmi/core": "^0.10.9"
  },
  "dependencies": {
    "abitype": "^0.7.1",
    "svelte": "^3.58.0",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "@wagmi/core": "^0.10.9"
  }
}
